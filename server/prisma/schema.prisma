generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Species {
	SHEEP
	CAT
	PIG
	COW
	HORSE
	DOG
}

enum ConsultType {
	FIRST
	VACINATION
	RETURN
	CHECKUP
}

model Patient {
  id          Int        @id @default(autoincrement())
  name        String
  tutor       String
  age         Int?
  specie      Species
  consults    Consult[]
}

model Consult {
  id           Int       @id @default(autoincrement())
  type         ConsultType
  description  String?
  dateTime     DateTime
  patient      Patient   @relation(fields: [patientId], references: [id])
  patientId    Int
  doctorName   String
}